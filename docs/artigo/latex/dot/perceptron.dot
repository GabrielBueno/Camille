digraph perceptron {
	rankdir = LR;
	splines = false;

	graph [ranksep=0.8]
	node  [shape=circle];
	edge  [arrowhead=vee, penwidth=0.5, arrowsize=0.4]

	x0 [label=<x<sub>0</sub>>];
	x1 [label=<x<sub>1</sub>>];
	x2 [label=<x<sub>2</sub>>];

	a0 [label=<f>];

	y [label=<y>];

	x0 -> a0;
	x1 -> a0;
	x2 -> a0;

	a0 -> y;
}